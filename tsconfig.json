{
    "compilerOptions": {
      "module": "ES6",
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "target": "ES6",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "strict": true
    },
    "exclude": [
      "./dist",
      "node_modules"
    ],
    "include": [
      "./src"
    ]
  }