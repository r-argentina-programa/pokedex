{
  "env": {
    "browser": true,
    "es6": true,
    "cypress/globals": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "cypress",
    "jest"
  ],
  "rules": {
    "import/extensions": [
      "error",
      {
        "js": "always",
        "json": "sometimes"
      }
    ]
  }
}
